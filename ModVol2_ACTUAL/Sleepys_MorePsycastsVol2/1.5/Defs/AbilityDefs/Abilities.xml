    <defName>SLP_PSY_CleanStride</defName>
    <label>clean stride</label>
	<jobDef>CastAbilityOnThingMelee</jobDef>
    <description>Psychically link skipgates to the bottom of the targets feet or base structure that remove debris and dirt before it can be spread to other surfaces. This results in the target not producing anywhere near as much filth as they may normally.</description>
    <level>2</level>
    <iconPath>UI/Abilities/SLP_PSY_CleanStride</iconPath>
	<stunTargetWhileCasting>True</stunTargetWhileCasting>
    <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
    <statBases>
      <Ability_EntropyGain>0</Ability_EntropyGain>
      <Ability_PsyfocusCost>0.10</Ability_PsyfocusCost>
      <Ability_Duration>3000</Ability_Duration>
    </statBases>
    <verbProperties>
      <warmupTime>1.0</warmupTime>
	  <range>-1</range>
