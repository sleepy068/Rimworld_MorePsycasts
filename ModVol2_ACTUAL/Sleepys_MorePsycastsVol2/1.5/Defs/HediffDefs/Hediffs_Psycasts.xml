<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Guidance -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_Guidance</defName>
    <label>psychic guidance</label>
    <description>Psychically-linked guidance.</description>
    <isBad>false</isBad>
    <stages>
      <li>
        <statOffsets>
          <GlobalLearningFactor>0.25</GlobalLearningFactor>
		  <LearningRateFactor MayRequire="Ludeon.RimWorld.Biotech">0.25</LearningRateFactor>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Ethereal Beauty -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_EtherealBeauty</defName>
    <label>ethereal beauty</label>
    <description>Psychically-induced visual beauty.</description>
    <isBad>false</isBad>
    <stages>
      <li>
        <statOffsets>
          <PawnBeauty>6</PawnBeauty>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Command -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_Command</defName>
    <label>psychic command</label>
    <description>Psychically-reduced manipulation.</description>
    <isBad>false</isBad>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Manipulation</capacity>
            <setMax>0.0</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Healing Bloom -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_HealingBloom</defName>
    <label>psychic healing bloom</label>
    <description>Psychically-induced immune system boost.</description>
    <isBad>false</isBad>
    <stages>
      <li>
        <statOffsets>
		  <InjuryHealingFactor>1.00</InjuryHealingFactor>
          <ImmunityGainSpeed>0.10</ImmunityGainSpeed>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Resonance (Caster) -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_ResonanceCaster</defName>
    <label>psychic resonance</label>
    <description>Psychic ability donation.</description>
    <isBad>true</isBad>
	<everCurableByItem>false</everCurableByItem>
	
	<initialSeverity>1.5</initialSeverity>
    <maxSeverity>4.5</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.0</severityPerDay>
        <showDaysToRecover>true</showDaysToRecover>
      </li>
    </comps>
    <stages>
	  <li>
        <label>echoes</label>
		<statOffsets>
		  <PsychicSensitivity>-0.80</PsychicSensitivity>
		  <PsychicEntropyRecoveryRate>-0.40</PsychicEntropyRecoveryRate>
		  <MeditationFocusGain>-0.35</MeditationFocusGain>
		</statOffsets>
      </li>
      <li>
        <minSeverity>1.51</minSeverity>
        <label>consequence</label>
		<capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.20</offset>
          </li>
        </capMods>
		<statOffsets>
		  <PsychicSensitivity>-1.60</PsychicSensitivity>
		  <PsychicEntropyRecoveryRate>-0.80</PsychicEntropyRecoveryRate>
		  <MeditationFocusGain>-0.70</MeditationFocusGain>
		</statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Resonance (Target) -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_ResonanceTarget</defName>
    <label>psychic resonance</label>
    <description>Inherited psychic boost.</description>
    <isBad>false</isBad>
	<initialSeverity>1.5</initialSeverity>
    <maxSeverity>1.5</maxSeverity>
    <comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-1.0</severityPerDay>
        <showDaysToRecover>true</showDaysToRecover>
      </li>
    </comps>
    <stages>
      <li>
        <statOffsets>
		  <PsychicSensitivity>0.80</PsychicSensitivity>
		  <PsychicEntropyRecoveryRate>0.05</PsychicEntropyRecoveryRate>
		  <MeditationFocusGain>0.10</MeditationFocusGain>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
</Defs>