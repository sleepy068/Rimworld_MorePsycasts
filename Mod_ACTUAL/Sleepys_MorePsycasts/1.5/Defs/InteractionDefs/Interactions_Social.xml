<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <InteractionDef>
    <defName>SLP_WordOfSleep</defName>
    <label>word of sleep</label>
    <workerClass>InteractionWorker</workerClass>
    <ignoreTimeSinceLastInteraction>True</ignoreTimeSinceLastInteraction>
    <symbol>Things/Mote/SpeechSymbols/SLP_ID_WordOfSleep</symbol>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] psychically calmed [RECIPIENT_nameDef] into a warm, sleepy and ready for bed state of mind.</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>
  
