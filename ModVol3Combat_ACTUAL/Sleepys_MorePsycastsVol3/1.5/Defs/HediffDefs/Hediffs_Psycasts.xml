<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <!-- Hex -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_Hex</defName>
    <label>psychic hex</label>
    <description>Psychically reduced combat abilities.</description>
    <isBad>true</isBad>
	<everCurableByItem>false</everCurableByItem>
    <stages>
      <li>
        <statOffsets>
			<ShootingAccuracyPawn>-6.00</ShootingAccuracyPawn>
			<MeleeHitChance>-4.00</MeleeHitChance>
			<MeleeDodgeChance>-2.00</MeleeDodgeChance>
		</statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Fire Shield -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_Fireshield</defName>
    <label>psychic fire shield</label>
    <description>Psychically enhanced thermal protection.</description>
    <isBad>false</isBad>
    <stages>
      <li>
        <statOffsets>
			<ComfyTemperatureMax>240</ComfyTemperatureMax>
			<Flammability>0</Flammability>
        </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Hunter's Mark -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_HuntersMark</defName>
    <label>hunter's mark</label>
    <description>Psychically reduced defence.</description>
    <isBad>true</isBad>
	<everCurableByItem>false</everCurableByItem>
    <stages>
      <li>
        <statOffsets>
			<IncomingDamageFactor>0.20</IncomingDamageFactor>
		</statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Clairvoyance -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_Clairvoyance</defName>
    <label>clairvoyance</label>
    <description>Psychically-enhanced senses.</description>
    <isBad>False</isBad>
    <stages>
      <li>
        <statOffsets>
			<MeleeDodgeChance>12.00</MeleeDodgeChance>
			<PawnTrapSpringChance>-0.40</PawnTrapSpringChance>
		</statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Paralysing Punch -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_ParalysingPunch</defName>
    <label>paralysed</label>
    <description>Psychically-induced paralysis.</description>
    <isBad>true</isBad>
	<everCurableByItem>false</everCurableByItem>
    <stages>
      <li>
        <capMods>
          <li>
            <capacity>Consciousness</capacity>
            <setMax>0.1</setMax>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Hypervelocity -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_Hypervelocity</defName>
    <label>hypervelocity</label>
    <description>Psychically-enhanced movement.</description>
    <isBad>False</isBad>
    <stages>
      <li>
        <statOffsets>
			<MeleeDodgeChance>6.00</MeleeDodgeChance>
			<MeleeCooldownFactor>-0.15</MeleeCooldownFactor>
			<RangedCooldownFactor>-0.075</RangedCooldownFactor>
			<AimingDelayFactor>-0.075</AimingDelayFactor>
		</statOffsets>
		<capMods>
          <li>
            <capacity>Moving</capacity>
            <offset>0.50</offset>
          </li>
        </capMods>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Reckless Rage -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_RecklessRage</defName>
    <label>reckless rage</label>
    <description>Psychically-induced rage.</description>
    <isBad>False</isBad>
    <stages>
      <li>
        <statOffsets>
			<MeleeDodgeChance>-4.00</MeleeDodgeChance>
			<IncomingDamageFactor>0.15</IncomingDamageFactor>
			<MeleeDamageFactor>0.15</MeleeDamageFactor>
			<MeleeHitChance>6.00</MeleeHitChance>
		</statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <!-- Sniper -->
  <HediffDef ParentName="PsycastHediffBase">
    <defName>SLP_Psycast_Sniper</defName>
    <label>sniper</label>
    <description>Psychically-enhanced accuracy.</description>
    <isBad>False</isBad>
    <stages>
      <li>
        <statOffsets>
			<ShootingAccuracyPawn>3.0</ShootingAccuracyPawn>
			<ShootingAccuracyFactor_Medium>0.005</ShootingAccuracyFactor_Medium>
			<ShootingAccuracyFactor_Long>0.01</ShootingAccuracyFactor_Long>
		</statOffsets>
      </li>
    </stages>
  </HediffDef>
  
</Defs>